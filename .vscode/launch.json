{
    "configurations": [
        {
            "name": "C/C++: i686-elf-gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kernel.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            //"externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerArgs": "-nx",
            //"preLaunchTask": "Run QEMU",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Disable GEF",
                    "text": "-nx",
                    "ignoreFailures": true
                },
                {
                    "description": "Run script",
                    "text": "source ${workspaceFolder}/.vscode/.gdb-script.gdb",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "/bin/gdb"
        }
    ],
    "version": "2.0.0"
}